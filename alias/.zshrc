# Aliases
alias so="source"

# Git
alias g="git"
alias gn="git --no-pager"
alias gcath="cat ~/Documents/help/git/commands.txt"
alias glessh="less ~/Documents/help/git/commands.txt"

alias nvima="nvim ~/.config/alacritty/alacritty.yml"
alias soa="source ~/.config/alacritty/alacritty.yml"

alias r="ranger"
alias c="clear"

# Python
alias sop="source ~/Documents/venv_global/bin/activate"
alias dea="deactivate"
alias nvimp="source ~/Documents/venv_global/bin/activate && nvim"

# Zsh
alias cdz="cd ~/.config/zsh"
alias nvimz="nvim ~/.config/zsh/.zshrc"
alias nvimza="nvim ~/.config/zsh/alias/.zshrc"
alias soz="source ~/.zshrc"
